<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.siu.cs.www.parkingspotfinder.ManageSpot">

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/backArrowButton"
        android:background="@drawable/arrowback"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <edu.siu.cs.www.parkingspotfinder.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parkr"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/parkrLabel" />

    <TextView
        android:text="Payment Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuLabel"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/timePurchaseLabel"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount of Time Desired: "
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuLabel"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/hoursToAddText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/timePurchaseLabel"
        android:layout_alignBottom="@+id/timePurchaseLabel"
        android:layout_toRightOf="@+id/timePurchaseLabel" />

    <TextView
        android:id="@+id/minutesToAddText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/hoursToAddText"
        android:layout_alignBottom="@+id/hoursToAddText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/hoursToAddText"
        android:layout_toEndOf="@+id/hoursToAddText" />

    <SeekBar
        android:id="@+id/hoursBar"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/timePurchaseLabel"
        android:max="24"
        android:layout_toRightOf="@+id/minutesLabel"
        android:layout_toEndOf="@+id/minutesLabel" />

    <SeekBar
        android:id="@+id/minutesBar"
        android:paddingTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hoursBar"
        android:max="59"
        android:layout_toEndOf="@+id/minutesLabel"
        android:layout_toRightOf="@+id/minutesLabel" />

    <TextView
        android:id="@+id/hoursLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/minutesBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Hours"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/minutesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/minutesBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rateLabel"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate: $"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/minutesBar"
        android:layout_toLeftOf="@+id/parkingRate"
        android:layout_toStartOf="@+id/parkingRate" />

    <TextView
        android:id="@+id/parkingRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/rateLabel"
        android:layout_alignBottom="@+id/rateLabel"
        android:layout_alignRight="@+id/parkrLabel"
        android:layout_alignEnd="@+id/parkrLabel" />

    <com.simplify.android.sdk.CardEditor
        android:id="@+id/cardEditor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:layout_below="@+id/rateLabel"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/purchaseButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/parkrLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:text="Purchase Time"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pageInfoButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/infopage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>