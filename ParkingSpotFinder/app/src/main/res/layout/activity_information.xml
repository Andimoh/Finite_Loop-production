<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.siu.cs.www.parkingspotfinder.InformationActivity">

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/backArrowButton"
        android:background="@drawable/arrowback"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <edu.siu.cs.www.parkingspotfinder.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parkr"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/parkrLabel" />

    <TextView
        android:text="About Parkr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/backArrowButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/aboutAppView"
        android:textSize="30dp" />

    <TextView
        android:text="      Parkr an app that will help you find an open parking spot in a lot near you! Feel free to contact us with any questions or comments about our app. We can be reached at parkr@gmail.com "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_below="@+id/aboutAppView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Version 0.5"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/aboutAppView"
        android:layout_alignStart="@+id/aboutAppView"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="84dp"
        android:id="@+id/textView5" />
</RelativeLayout>
